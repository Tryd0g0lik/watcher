root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
# игнорируем длинные строки
max_line_length = off

[*.(ts, js, css)]
curly_bracket_next_line = true
trim_trailing_whitespace = true

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = false
